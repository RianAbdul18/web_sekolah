<%- include('partials/header') %>

<section class="berita section">
  <div class="container">
    <h1 class="section-title">Berita & Informasi</h1>

    <% if (berita.length === 0) { %>
      <div class="text-center py-5">
        <p class="text-muted">Belum ada berita.</p>
      </div>
    <% } else { %>
      <div class="row">
        <% berita.slice(0, 6).forEach(b => { %>
          <div class="col-md-6 col-lg-4 mb-4">
            <article class="berita-card">
              <div class="berita-image">
                <div class="placeholder">
                  <i class="fas fa-newspaper fa-3x"></i>
                </div>
              </div>
              <div class="berita-content">
                <h3><%= b.judul %></h3>
                <p class="meta">
                  <i class="fas fa-calendar"></i> 
                  <%= new Date(b.tanggal).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                </p>
                <p class="excerpt"><%= b.isi.substring(0, 120) %>...</p>
                <a href="#" class="read-more">Baca selengkapnya</a>
              </div>
            </article>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>

<%- include('partials/footer') %>

<style>
  .berita-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    transition: all 0.3s;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .berita-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
  }
  
  .berita-image {
    height: 180px;
    background: #f1f3f5;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .placeholder {
    color: #adb5bd;
  }
  
  .berita-content {
    padding: 1.5rem;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }
  
  .berita-content h3 {
    margin: 0 0 0.75rem;
    font-size: 1.2rem;
    color: #2d3748;
  }
  
  .meta {
    font-size: 0.875rem;
    color: #95a5a6;
    margin-bottom: 0.75rem;
  }
  
  .excerpt {
    color: #718096;
    margin-bottom: 1rem;
    flex-grow: 1;
  }
  
  .read-more {
    color: #3498db;
    font-weight: 600;
    text-decoration: none;
    font-size: 0.95rem;
  }
  
  .read-more:hover {
    text-decoration: underline;
  }
</style>