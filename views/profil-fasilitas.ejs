<%- include('partials/header') %>

<section class="fasilitas section">
  <div class="container">
    <h1 class="section-title">Fasilitas Sekolah</h1>
    <p class="text-center mb-5">Sarana dan prasarana lengkap untuk mendukung proses belajar mengajar</p>

    <div class="row">
      <% profils.sort((a,b) => a.urutan - b.urutan).forEach(p => { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="fasilitas-card">
            <div class="fasilitas-image">
              <% if (p.foto) { %>
                <img src="<%= p.foto %>" alt="<%= p.nama %>" class="img-fluid">
              <% } else { %>
                <div class="placeholder">
                  <i class="fas fa-school fa-3x"></i>
                </div>
              <% } %>
            </div>
            <div class="fasilitas-info">
              <h3><%= p.nama %></h3>
              <p><%= p.deskripsi %></p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<style>
  .fasilitas-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    transition: all 0.3s;
    height: 100%;
  }
  
  .fasilitas-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0,0,0,0.15);
  }
  
  .fasilitas-image {
    height: 180px;
    overflow: hidden;
  }
  
  .fasilitas-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }
  
  .fasilitas-card:hover .fasilitas-image img {
    transform: scale(1.1);
  }
  
  .placeholder {
    height: 100%;
    background: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
  }
  
  .fasilitas-info {
    padding: 1.5rem;
  }
  
  .fasilitas-info h3 {
    margin: 0 0 0.75rem;
    font-size: 1.3rem;
    color: #2d3748;
  }
  
  .fasilitas-info p {
    color: #718096;
    font-size: 0.95rem;
  }
</style>