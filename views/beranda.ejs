<%- include('partials/header') %>
<%- include('partials/hero') %>

<!-- Sambutan Kepala Sekolah -->
<section class="sambutan section">
  <div class="container">
    <div class="row">
      <div class="col-md-8">
        <h2 class="section-title">Sambutan Kepala Sekolah</h2>
        <h4><%= data.sambutan.judul %></h4>
        <p><%= data.sambutan.isi %></p>
        <p><strong><%= data.sambutan.nama %></strong></p>
      </div>
      <div class="col-md-4 text-center">
        <% if (data.sambutan.foto) { %>
          <img src="<%= data.sambutan.foto %>" alt="Kepala Sekolah" class="img-fluid rounded-circle" style="width: 200px; height: 200px; object-fit: cover;">
        <% } %>
      </div>
    </div>
  </div>
</section>

<!-- Agenda Terbaru -->
<section class="agenda section bg-light">
  <div class="container">
    <h2 class="section-title">Agenda Sekolah</h2>
    <div class="row">
      <% data.agenda.filter(a => a.aktif).slice(0, 3).forEach(a => { %>
        <div class="col-md-4 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h5 class="card-title"><%= a.kegiatan %></h5>
              <p class="card-text">
                <small class="text-muted">
                  <i class="fas fa-calendar"></i> <%= new Date(a.tanggal).toLocaleDateString('id-ID', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
                </small><br>
                <% if (a.lokasi) { %>
                  <small class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= a.lokasi %></small>
                <% } %>
              </p>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>

<!-- Statistik Sekolah -->
<section class="statistik section">
  <div class="container">
    <h2 class="section-title">Statistik Sekolah</h2>
    <div class="row text-center">
      <div class="col-6 col-md-3">
        <div class="stat-box">
          <h3><%= data.statistik.siswa %></h3>
          <p>Siswa</p>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="stat-box">
          <h3><%= data.statistik.guru %></h3>
          <p>Guru</p>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="stat-box">
          <h3><%= data.statistik.kelas %></h3>
          <p>Kelas</p>
        </div>
      </div>
      <div class="col-6 col-md-3">
        <div class="stat-box">
          <h3><%= data.statistik.ekskul %></h3>
          <p>Ekskul</p>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('partials/footer') %>

<style>
  .section { padding: 60px 0; }
  .section-title { text-align: center; margin-bottom: 40px; position: relative; }
  .section-title::after { content: ''; display: block; width: 60px; height: 3px; background: #3498db; margin: 10px auto; }
  .stat-box h3 { font-size: 2.5rem; font-weight: bold; color: #3498db; }
  .stat-box p { margin: 0; color: #7f8c8d; }
  .bg-light { background: #f8f9fa; }
</style>