<%- include('partials/header') %>

<!-- SLIDER -->
<div class="slider">
  <% data.slider.forEach(img => { %>
    <img src="<%= img %>" alt="Slide">
  <% }) %>
</div>

<!-- SAMBUTAN -->
<section class="sambutan">
  <div class="container">
    <img src="<%= data.sambutan.foto %>" alt="Kepsek">
    <div>
      <h3>Sambutan Kepala Sekolah</h3>
      <h4><%= data.sambutan.nama %></h4>
      <p><%= data.sambutan.pesan %></p>
      <a href="#" class="btn">Selengkapnya</a>
    </div>
    <div class="statistik">
      <div><h2>20</h2><p>GURU & STAF</p></div>
      <div><h2>120</h2><p>SISWA</p></div>
      <div><h2>7</h2><p>ROMBEL</p></div>
    </div>
  </div>
</section>

<!-- AGENDA -->
<section class="section agenda">
    <div class="container">
      <h3>Agenda</h3>
      <p>Agenda kegiatan dan aktivitas yang disesuaikan dengan kalender pendidikan</p>
      <a href="#" class="btn">Selengkapnya</a>
      <div class="cards">
        <% data.agenda.forEach(a => { %>
          <div class="card">
            <h4><%= a.judul %></h4>
            <p>Tahun Pelajaran 2025/2026</p>
            <p><%= a.tanggal %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </section>

<!-- STAFF PENGAJAR -->
<section class="section">
    <div class="container">
      <h3>Staf Pengajar</h3>
      <p>Tenaga pendidik profesional dan berdedikasi tinggi</p>
      <a href="/profil/staff" class="btn">Selengkapnya</a>
      <div class="grid-4">
        <% data.staff.forEach(s => { %>
          <div class="item">
            <img src="<%= s.foto %>" alt="<%= s.nama %>">
            <h4><%= s.nama %></h4>
            <p><%= s.mapel %></p>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <!-- BERITA & FASILITAS & EKSTRA -->
  <section class="section">
    <div class="container">
      <h3>Berita & Informasi</h3>
      <p>Kegiatan terbaru dan prestasi siswa</p>
      <a href="/berita" class="btn">Selengkapnya</a>
      <div class="grid-4">
        <% data.berita.forEach(b => { %>
          <div class="item">
            <img src="<%= b.foto %>" alt="<%= b.judul %>">
            <h4><%= b.judul %></h4>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <section class="section">
    <div class="container">
      <h3>Fasilitas Sekolah</h3>
      <p>Sarana penunjang pembelajaran yang lengkap</p>
      <a href="/profil/fasilitas" class="btn">Selengkapnya</a>
      <div class="grid-4">
        <% data.fasilitas.forEach(f => { %>
          <div class="item">
            <img src="<%= f.foto %>" alt="<%= f.nama %>">
            <h4><%= f.nama %></h4>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
  <section class="section">
    <div class="container">
      <h3>Ekstrakurikuler</h3>
      <p>Kegiatan pengembangan bakat dan minat siswa</p>
      <a href="/ekstra" class="btn">Selengkapnya</a>
      <div class="grid-4">
        <% data.ekstra.forEach(e => { %>
          <div class="item">
            <img src="<%= e.foto %>" alt="<%= e.nama %>">
            <h4><%= e.nama %></h4>
          </div>
        <% }) %>
      </div>
    </div>
  </section>
  
<%- include('partials/footer') %>